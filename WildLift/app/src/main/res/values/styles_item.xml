<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TypeCardView" parent="BaseCardView">
        <item name="cardBackgroundColor">#3949AB</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TypeTextView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LevelCardView" parent="BaseCardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LevelTextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemName">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#00ACC1</item>
        <item name="android:textStyle">bold</item>

        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemCost">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFB300</item>
        <item name="android:textStyle">bold</item>

        <item name="android:gravity">right</item>
        <item name="drawableRightCompat">@drawable/ic_coin</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>