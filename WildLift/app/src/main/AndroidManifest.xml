<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cookandroid.wildlift">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_main"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_main_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".SplashActivity"
            android:label="와일드리프트">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:label = "와일드리프트"
            android:theme="@style/AppTheme2"
            android:screenOrientation="portrait"
            />
        <activity android:name=".champion.ChampionActivity"
          android:windowSoftInputMode="adjustNothing"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".item.ItemActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".rune.RunesActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".champion.championInfo.ChampionInfo"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".spell.SpellActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".champion.championInfo.ChampionSkillSkin"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".champion.championInfo.ChampionUniverse"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".champion.championInfo.ChampionAbility"
            android:screenOrientation="portrait"/>
        <activity android:name=".Patch.PatchWebView"
            android:screenOrientation="portrait"/>
        <activity android:name=".Video.VideoActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>