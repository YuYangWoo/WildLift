<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="dialog"
            type="com.cookandroid.wildlift.item.ItemDialog" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="500dp"
        android:layout_height="wrap_content">

        <ImageView
            itemImage="@{dialog.item}"

            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:contentDescription="@string/item" />

        <TextView
            android:text="@{dialog.item.name}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@{dialog.item.description}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            toString="@{dialog.item.totalCost}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            toString="@{dialog.item.combinationCost}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            toString="@{dialog.item.sellCost}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>